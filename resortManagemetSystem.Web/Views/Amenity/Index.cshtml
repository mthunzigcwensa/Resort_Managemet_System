@model IEnumerable<Amenity>
<div class="w-100 card border-0 p-4" style="background-color: #12161d;">
    <div class="card-header bg-gradient ml-0 py-3" style="background-color: #1a222b;">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Villa Number List</h2>
            </div>
        </div>
    </div>

    <div class="card-body ">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Amenity" asp-action="Create" class="btn mybtn-success">
                    <i class="bi bi-plus-circle"></i> Create New Villa Number
                </a>
            </div>
        </div>
    </div>

    <table class=" table table-bordered table-striped " style="color: #aba398; font-weight: bolder">

        <thead>
            <tr>
                <th>
                    Amenity Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Villa
                </th>

                <th></th>

            </tr>
        </thead>

        <tbody>

            @foreach (var obj in Model)
            {

                <tr style="color: white; font-weight: normal">
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Description
                    </td>
                    <td>
                        @obj.Villa.Name
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Amenity" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a type="submit" asp-controller="Amenity" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>


            }



        </tbody>

    </table>


</div>
