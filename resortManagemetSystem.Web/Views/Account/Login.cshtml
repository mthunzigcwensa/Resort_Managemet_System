@model LoginVM

<section class="vh-100" style="background-color: #12161d;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="background-color: #1a222b; border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block" >
                            <img  src="https://images.pexels.com/photos/1838640/pexels-photo-1838640.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;"  />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center" style="background-color: #1a222b; border-radius: 1rem;">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post">
                                    <input asp-for="RedirectUrl" hidden />
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="mb-0 onnewFont">Sign In</span>
                                    </div>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <input asp-for="Email" type="email" id="form2Example17" class="form-control form-control-lg" />
                                        <label asp-for="Email" class="form-label " style="color: #aba398" for="form2Example17">Email address</label>
                                        
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <input asp-for="Password" type="password" id="form2Example27" class="form-control form-control-lg" />
                                        <label asp-for="Password" class="form-label " style="color: #aba398" for="form2Example27">Password</label>
                                        
                                    </div>
                                    <div class="checkbox mb-3">
                                        <input class="form-check-input" asp-for="RememberMe" />

                                        <label class="form-label">
                                            Remember Me
                                        </label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn  btn-lg btn-block text-white " style="background-color: #101315" type="submit">Login</button>
                                    </div>

                                    <a class="small text-muted" href="#!">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a href="#!"
                                                                  style="color: #393f81;">Register here</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
