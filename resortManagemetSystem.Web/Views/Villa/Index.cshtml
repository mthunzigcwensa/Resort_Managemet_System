@model IEnumerable<Villa>


<div class="w-100 card border-0 p-4" style="background-color: #12161d;">
    <div class="card-header  bg-gradient ml-0 py-3" style="background-color: #1a222b;">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Villa List</h2>
            </div>
        </div>
    </div>

    <div class="card-body " style=" color: #65da41; font-weight: bold" >
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Villa" asp-action="Create" class="btn mybtn-success">
                    <i class="bi bi-plus-circle"></i> Create New Villa
                </a>
            </div>
        </div>
        </div>

    <table class=" table table-bordered table-striped " style="color: #aba398; font-weight: bolder">

        <thead>
            <tr>
                <th>
                    name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Sqft
                </th>
                <th>
                    Occupancy
                </th>
                <th></th>

            </tr>
        </thead>

        <tbody style="color: white;">

            @foreach (var obj in Model)
            {

                <tr style="color: white;">
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                        @obj.Sqft
                    </td>
                    <td>
                        @obj.Occupancy
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Villa" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a type="submit" asp-controller="Villa" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>


            }



        </tbody>

    </table>


    </div>



  